<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Marketing CRM</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        /* Shared global styles */
        body { background-color: #f4f7f6; }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark shadow-sm mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Campaign" asp-action="Create">
                <i class="bi bi-cpu-fill me-2"></i>Marketing CRM
            </a>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted mt-5 py-3 bg-white">
    <div class="container text-center">
        &copy; 2025 - MarketingDemo CRM System
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>